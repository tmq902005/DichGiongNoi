<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginBottom="15dp">
   <EditText
       android:id="@+id/et_camera_result"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:lines="8"
       android:gravity="top"
       android:inputType="textMultiLine"
       android:textColor="@color/white" 
       android:textSize="17sp"
       android:textColorHint="#f0f0f0"
       />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_camera_result"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    >

   <Button
       android:id="@+id/btn_ok_translate"
       android:layout_width="wrap_content"
       android:layout_height="35dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/rounded_button_red"
       android:drawableRight="@android:drawable/ic_media_play"
       android:layout_marginRight="15dp"
       android:paddingLeft="35dp"
       android:paddingRight="5dp"
       android:text="Tranlsate"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textStyle="bold"
       android:textSize="16sp" />

   <Button
       android:id="@+id/btn_cancel_translate"
       android:layout_width="wrap_content"
       android:layout_height="35dp"
       android:layout_alignParentTop="true"
       android:layout_toLeftOf="@+id/btn_ok_translate"
       android:layout_marginRight="10dp"
       android:background="@drawable/rounded_button"
       android:paddingLeft="20dp"
       android:paddingRight="20dp"
       android:text="Cancel"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textStyle="bold"
       android:textSize="16sp" />

</RelativeLayout>
</RelativeLayout>
