<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/maincolor" >

    <TextView
        android:id="@+id/guide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="# APPLICATION GUIDE #"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:textSize="20dp" />
<LinearLayout
    android:id="@+id/lo_guide_speak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/guide_title">
    <ImageView 
        android:id="@+id/guide_speak_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/togglebutton_off"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_speak"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Speech recognition"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:layout_gravity="center_vertical" />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_photo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_speak">
    <ImageView 
        android:id="@+id/guide_photo_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/camera_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_photo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Take a photo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"  />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_gallery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_photo">
    <ImageView 
        android:id="@+id/guide_gallery_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gallery_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_gallery"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Select a photo in the gallery"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"  />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_qtrans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_gallery">
    <ImageView 
        android:id="@+id/guide_qtrans_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/quicktrans_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_volume"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Turn On/Off Quick Translator"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"  />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_clean"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_qtrans">
    <ImageView 
        android:id="@+id/guide_clean_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_clear"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_clean"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Remove all items"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"  />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_clean">
    <ImageView 
        android:id="@+id/guide_info_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="About application"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_gravity="center_vertical" />
   
</LinearLayout>
<TextView
        android:id="@+id/guide_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="# TRANSLATED ITEMS GUIDE #"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:textSize="18dp"
        android:layout_below="@+id/lo_guide_info"/>
<LinearLayout
    android:id="@+id/lo_guide_item_speak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/guide_title_item">
    <ImageView 
        android:id="@+id/guide_speak_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_list_speaker"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_speak_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Speaking text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"  />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_item_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_item_speak">
    <ImageView 
        android:id="@+id/guide_share_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_list_share"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_share_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Share translations"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_gravity="center_vertical" />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/lo_guide_item_copy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/lo_guide_item_share">
    <ImageView 
        android:id="@+id/guide_copy_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_list_copy"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/guide_copy_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Copy text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_gravity="center_vertical" />
   
</LinearLayout>

<LinearLayout
    android:id="@+id/lo_next_guide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/lo_guide_item_copy"
    android:layout_alignParentRight="true"
    >
    <ImageView 
        android:id="@+id/guide_next_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/next_icon"
        android:layout_gravity="center"
        android:layout_marginRight="7dp"
        />
    <TextView
        android:id="@+id/guide_next"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="italic|bold"
        android:textSize="20dp"
        android:gravity="right|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginRight="30dp"
        android:layout_gravity="center_vertical" />
   
</LinearLayout>

</RelativeLayout>
